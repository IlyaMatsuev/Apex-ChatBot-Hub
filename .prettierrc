{
    "plugins": ["@ilyamatsuev/prettier-plugin-apex", "@prettier/plugin-xml"],
    "trailingComma": "none",
    "printWidth": 120,
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "arrowParens": "avoid",
    "apexInsertFinalNewline": true,
    "apexFormatAnnotations": true,
    "apexFormatStandardTypes": true,
    "apexFormatInlineComments": "spaced",
    "apexEmptyBlockBracketLine": true,
    "apexExpandOneLineProperties": false,
    "apexExplicitAccessModifier": true,
    "apexSortModifiers": true,
    "apexForceCurly": true,
    "overrides": [
        {
            "files": "*.xml",
            "options": {
                "printWidth": 240
            }
        },
        {
            "files": ["*.yml", "*.yaml"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "**/lwc/**/*.html",
            "options": { "parser": "lwc" }
        }
    ]
}
